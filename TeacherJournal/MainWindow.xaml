<Window x:Class="TeacherJournal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherJournal"
        mc:Ignorable="d"
        Title="Журнал викладача" Height="450" Width="625"
        FontSize="16"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#E4ECBB">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="Padding" Value="5 3"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Background" Value="#F0BEBE"/>
                </Style>
            </Grid.Resources>
            <TextBlock Grid.Row="0" Margin="10 10 10 3" Text="Семестр:"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="cbSemesterList" Grid.Column="0" Margin="10 5 5 5"  SelectedIndex="0" IsEditable="False">
                    <TextBlock>I семестр 2017</TextBlock>
                    <TextBlock>II семестр 2017</TextBlock>
                    <TextBlock>I семестр 2018</TextBlock>
                </ComboBox>
                <Button x:Name="btnAddNewSemester" Grid.Column="1" Margin="0 5 10 5" Click="btnAddNewSemester_Click">+</Button>
            </Grid>
            
            <Button x:Name="btnSubject" Grid.Row="2" Content="Предмети" Click="openVocabulary" />
            <Button x:Name="btnGroup" Grid.Row="3" Content="Групи" Click="openVocabulary"/>
            <Button x:Name="btnClassroom" Grid.Row="4" Content="Аудиторії" Click="openVocabulary"/>
            <Button x:Name="btnSchedule" Grid.Row="5" Content="Розклад" Click="btnSchedule_Click"/>
            
        </Grid>
        <Border BorderBrush="#cccccc" BorderThickness="1"/>
        <Grid Grid.Column="1" Background="#AFA7CD">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Margin="10" FontSize="18" Text="Заняття" HorizontalAlignment="Center" FontWeight="Bold"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10 0 10 15">
                <TextBlock Text="Дата з " VerticalAlignment="Center" />
                <DatePicker MinWidth="150"></DatePicker>
                <TextBlock Text="по " Margin="10 0 0 0" VerticalAlignment="Center"/>
                <DatePicker MinWidth="150"></DatePicker>
            </StackPanel>
            <DataGrid Grid.Row="2" x:Name="dataGrid" Margin="10 0 10 15">
            </DataGrid>
        </Grid>
    </Grid>
</Window>
